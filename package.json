{
	"name": "stitchy",
	"version": "1.0.0",
	"description": "3D GIF Creator",
	"main": "main.js",
	"scripts": {
		"start": "electron .",
		"build": "electron-builder",
		"postinstall": "npm rebuild sharp --platform=darwin --arch=arm64",
		"watch:css": "tailwindcss -i ./styles/input.css -o ./styles/output.css --watch",
		"build:css": "tailwindcss -i ./styles/input.css -o ./styles/output.css"
	},
	"build": {
		"files": [
			"*.js",
			"styles/**/*",
			"node_modules/**/*",
			"package.json",
			"index.html"
		],
		"asar": true,
		"asarUnpack": [
			"node_modules/sharp/**/*",
			"node_modules/ffmpeg-static/**/*",
			"node_modules/fluent-ffmpeg/**/*"
		],
		"directories": {
			"output": "dist"
		},
		"appId": "com.stitchy.app",
		"productName": "Stitchy",
		"mac": {
			"target": [
				"dmg",
				"zip"
			],
			"category": "public.app-category.graphics-design"
		},
		"win": {
			"target": [
				"nsis",
				"portable"
			]
		},
		"linux": {
			"target": [
				"AppImage",
				"deb"
			]
		}
	},
	"dependencies": {
		"cropperjs": "^1.6.2",
		"ffmpeg-static": "^5.2.0",
		"fluent-ffmpeg": "^2.1.2",
		"react-dropzone": "^14.3.5",
		"sharp": "^0.32.6",
		"tmp-promise": "^3.0.3"
	},
	"devDependencies": {
		"autoprefixer": "^10.4.20",
		"electron": "^28.0.0",
		"electron-builder": "^24.9.1",
		"postcss": "^8.4.49",
		"tailwindcss": "^3.4.15"
	}
}
